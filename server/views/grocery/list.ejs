<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-10">
            <h1><%= title %></h1>
            <a href="/grocery-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add an Item </a>
            <br>
            <br>
    <table class= "table table-striped table-hover table-dark">
    <tr class="d-flex">
        <th class="text-center col-4">Item</th>
        <th class="text-center col-3">Quantity</th>
        <th class="text-center col-3">Price Per</th>
        <!-- <th class="text-center col-5">Description</th>
        <th class="text-center col-1">Price</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th> -->
    </tr>
    <!-- Repeat the template -->
    <% for(let count=0; count < Grocerylist.length; count++) { %>
        <tr class="d-flex">
            <td class="text-center col-4"><%= Grocerylist[count].item %></td>
            <td class="text-center col-3"><%= Grocerylist[count].quantity %></td>
            <td class="text-center col-3"><%= Grocerylist[count].price %></td>

            <td class="text-center col-1">
                <a href="/grocery-list/edit/<%= Grocerylist[count]._id %>"
                    class="btn btn-primary">
                    <i class="fas fa-pencil-alt"></i> Edit </a>
            </td>

            <td class="text-center col-1">
                <a href="/grocery-list/delete/<%= Grocerylist[count]._id %>"
                    class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete </a>
            </td>
                        
        </tr>
    <% } %>
    </table>
</div>
</div>
</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>