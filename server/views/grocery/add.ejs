<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

              <div class="form-group">
                <label for="itemTextField">Item</label>
                <input type="text" class="form-control"
                id="itemTextField"
                placeholder="Enter the item"
                name="item" required>
              </div> 

              <div class="form-group">
                <label for="quantityTextField">Quantity</label>
                <input type="text" class="form-control"
                id="quantityTextField"
                placeholder="Enter the quantity"
                name="quantity" required>
              </div> 

              <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form-control"
                id="priceTextField"
                placeholder="Enter the price of item"
                name="price" required>
              </div> 
                <br>
              <button class="btn-btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>

              <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>